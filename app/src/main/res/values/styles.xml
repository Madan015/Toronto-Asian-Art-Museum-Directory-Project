<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="TextAppearance.AppCompat">
        <!--        <item name="android:background">@color/accent</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="MuseumTitle">
            <item name="android:textSize">36sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/navyBlue</item>
            <item name="android:fontFamily">@font/berkshite</item>
            <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="MuseumHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accentBlack</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

</resources>